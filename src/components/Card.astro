---
import { Icon } from "astro-icon";
const { timeframe, title, description, url, tags, url_name, image } = Astro.props;
---
<div class="grid grid-cols-3 grid-rows-1 w-full p-2 place-items-center border-b-[1px] border-dashed py-8 border-text/25">
    <!-- Primera columna: Muestra el marco de tiempo -->
    <div class="self-start justify-self-start">
      <!-- Texto del marco de tiempo con estilo visual tenue -->
      <p class="text-text/50 text-base">
        {timeframe} <!-- Renderiza el marco de tiempo proporcionado como propiedad -->
      </p>
    </div>
  
    <!-- Segunda columna: Muestra el título, descripción y etiquetas -->
    <div class="self-start justify-self-start text-left">
      <!-- Título con un estilo más destacado -->
      <p class="text-lg text-text/80">{title}</p>
      <!-- Descripción con un estilo más tenue -->
      <p class="text-sm text-text/70">{description}</p>
      <!-- Etiquetas adicionales con estilo reducido -->
      <sub class="text-xs text-text/60">{tags}</sub>
      <!-- Slot: Permite que se inserten elementos adicionales (como un botón) desde el padre que use este componente -->
      <slot />
    </div>
  
    <!-- Tercera columna: Muestra un enlace con texto y un ícono opcional -->
    <div class="self-start justify-self-end">
      <!-- Enlace que apunta a la URL proporcionada -->
      <a 
        href={url} 
        target="_blank" 
        class="text-base text-right text-text/60 hover:text-text/80 flex justify-center items-center"
      >
        {url_name} <!-- Nombre del enlace proporcionado como propiedad -->
        <!-- Renderiza un ícono solo si la URL no es "#" -->
        {url !== "#" && <Icon name="icon-park-outline:unlink" class="w-4 h-4 ml-2" />}
      </a>
    </div>
  
    <!-- Nueva sección para mostrar una imagen -->
    {image && (
      <div class="col-span-3 mt-4">
        <!-- Imagen proporcionada con sus propiedades como fuente y estilo visual -->
        <img 
          src={image} 
          alt={title} 
          class="w-full h-auto rounded-lg shadow-md" 
        />
      </div>
    )}
  </div>
  